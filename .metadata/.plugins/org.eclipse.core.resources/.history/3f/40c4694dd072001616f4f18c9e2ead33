
public class BinaryTreeDiamater {
	
	public static int height(node root)
	{
		if(root==null)
			return 0;
		else
			return Math.max(height(root.left),height(root.right))+1;
	}
	
	public static void findMaxDiameter(node root)
	{
		if(root==null)
			return 0;
		int lHeight = height(root.left);
		int rHeight = height(root.right);
		System.out.println(lHeight+""+rHeight);
		
	}

	public static void main(String[] args)
	{
		node n1 = new node(10);
		node n2 = new node(5);
		node n3 = new node(11);
		node n4 = new node(-5);
		node n5 = new node(8);
		node n6 = new node(20);
		node n7 = new node(6);
		node n8 = new node(9);
		n1.left=n2;
		n1.right=n3;
		n2.left=n4;
		n2.right=n5;
		n3.right=n6;
		n5.left=n7;
		n5.right=n8;
		findMaxDiameter(n1);
	}
}
